= simple_form_for(@post) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title, input_html: { class: 'form-control' }
    = f.input :item, input_html: { class: 'form-control' }
    = f.input :description, input_html: { class: 'form-control' }
    = f.input :address, input_html: { class: 'form-control'}
    = f.input :lat, input_html: { class: 'form-control'}
    = f.input :lng, input_html: { class: 'form-control'}


    = f.input :image, input_html: { class: 'form-control' }, as: :file

  .form-actions
    = f.button :submit, class: 'btn btn-primary'
