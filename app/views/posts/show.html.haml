%p#notice= notice

.row
  .col-md-6
    = image_tag @post.image.url(:large)
  .col-md-6
    %h3= @post.title
    %p.item= @post.item
    %p.description= @post.description
    %p.lat= @post.lat
    %p.lng= @post.lng

    %p
      Submitted by
      = @post.user.email
%br
.row
  .col-md-6
    %img{:src => "https://maps.googleapis.com/maps/api/staticmap?center=#{@post.lat.to_s + ',' + @post.lng.to_s}&zoom=16&size=600x300&maptype=roadmap&key=#{ENV['GOOGLE_API_KEY']}", :style => "-webkit-user-select: none"}/

%br
  = link_to 'Add Location', location_path, class: 'btn btn-outline-success'
%br


= link_to 'Edit', edit_post_path(@post), class:'btn btn-primary'
\|
= link_to 'Back', posts_path, class:'btn btn-success'
