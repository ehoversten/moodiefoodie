%p#notice= notice

.row
  .col-md-6
    = image_tag @post.image.url(:large)
  .col-md-6
    %h3= @post.title
    %br

    %h5 Item:
    %p.item= @post.item

    %h5 Description:
    %p.description= @post.description

    %h5 Lat / Lng:
    %p.lat= @post.lat
    %p.lng= @post.lng

    %h5 Address:
    %p.address= @post.address

    %h5 Latitude and Longitude:
    %p.latitude= @post.latitude
    %p.longitude= @post.longitude

    %br
    %p
      Submitted by
      = @post.user.email
%br
.row
  .col-md-6
    %img{:src => "https://maps.googleapis.com/maps/api/staticmap?center=#{@post.lat.to_s + ',' + @post.lng.to_s}&zoom=17&size=600x300&maptype=roadmap&markers=color:red%7Clabel:A%7C#{@post.lat.to_s + ',' + @post.lng.to_s}&key=#{ENV['GOOGLE_API_KEY']}", :style => "-webkit-user-select: none"}/
  .col-md-6
    %img{:src => "https://maps.googleapis.com/maps/api/staticmap?center=#{@post.latitude.to_s + ',' + @post.longitude.to_s}&zoom=16&size=600x300&maptype=roadmap&markers=color:red%7Clabel:A%7C#{@post.latitude.to_s + ',' + @post.longitude.to_s}&key=#{ENV['GOOGLE_API_KEY']}", :style => "-webkit-user-select: none"}/

%br
  = link_to 'Add Location', location_path, class: 'btn btn-outline-success'
%br


= link_to 'Edit', edit_post_path(@post), class:'btn btn-primary'
\|
= link_to 'Back', posts_path, class:'btn btn-success'
